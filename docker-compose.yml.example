version: '3.8'

services:
  app:
    build: .
    ports:
      - "80:80"
    environment:
      APP_NAME: Influence360
      APP_ENV: dev
      APP_KEY: base64:YourAppKeyHere
      APP_DEBUG: "true"
      APP_URL: http://localhost
      APP_TIMEZONE: America/Denver
      APP_LOCALE: en
      APP_CURRENCY: USD
      LOG_CHANNEL: stack
      LOG_LEVEL: debug
      DB_CONNECTION: mysql
      DB_HOST: 127.0.0.1
      DB_PORT: 3306
      DB_DATABASE: influence360
      DB_USERNAME: root
      DB_PASSWORD: password
      MAIL_MAILER: smtp
      MAIL_HOST: localhost
      MAIL_PORT: 25
      MAIL_USERNAME: null
      MAIL_PASSWORD: null
      MAIL_ENCRYPTION: null
      MAIL_FROM_ADDRESS: influence360@email.santaclarautah.gov
      MAIL_FROM_NAME: "${APP_NAME}"
      MAIL_DOMAIN: email.santaclarautah.gov
    volumes:
      - .:/var/www/html
    networks:
      - app-network

  mysql:
    image: mysql:8
    environment:
      MYSQL_ROOT_PASSWORD: password
      MYSQL_DATABASE: influence360
      MYSQL_USER: root
      MYSQL_PASSWORD: password
    volumes:
      - db_data:/var/lib/mysql
    networks:
      - app-network

volumes:
  db_data:

networks:
  app-network:
